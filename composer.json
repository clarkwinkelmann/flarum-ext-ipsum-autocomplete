{
    "name": "clarkwinkelmann/flarum-ext-ipsum-autocomplete",
    "description": "Easily insert Lorem Ipsum in post composer",
    "keywords": [
        "flarum",
        "lorem ipsum"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "flarum/core": "^1.2",
        "fakerphp/faker": "^1.20"
    },
    "authors": [
        {
            "name": "Clark Winkelmann",
            "homepage": "https://clarkwinkelmann.com/",
            "email": "clark.winkelmann@gmail.com",
            "role": "Developer"
        }
    ],
    "support": {
        "source": "https://github.com/clarkwinkelmann/flarum-ext-ipsum-autocomplete",
        "forum": "https://discuss.flarum.org/d/31423"
    },
    "autoload": {
        "psr-4": {
            "ClarkWinkelmann\\IpsumAutocomplete\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Ipsum Autocomplete",
            "category": "feature",
            "icon": {
                "name": "fas fa-paragraph",
                "backgroundColor": "#684ba6",
                "color": "#fff"
            }
        }
    }
}
